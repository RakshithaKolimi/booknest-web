{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@booknest/ui": ["packages/ui/src"],
      "@booknest/ui/*": ["packages/ui/src/*"],
      "@booknest/services": ["packages/api/src"],
      "@booknest/services/*": ["packages/api/src/*"],
      "@booknest/utils": ["packages/utils/src"],
      "@booknest/utils/*": ["packages/utils/src/*"],
      "@booknest/pages": ["packages/pages/src"],
      "@booknest/pages/*": ["packages/pages/src/*"],
      "@booknest/ui-helpers": ["packages/ui-helpers/src"],
      "@booknest/ui-helpers/*": ["packages/ui-helpers/src/*"]
    }
  }
}
